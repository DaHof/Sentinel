# Copy to .env and fill in your credentials
APP_SECRET_KEY=dev-secret-change-me
APP_ADMIN_USER=admin
# Provide one of APP_ADMIN_PASS (plain text) or APP_ADMIN_HASH (Werkzeug hash)
APP_ADMIN_PASS=
APP_ADMIN_HASH=
SNDS_KEY=your_snds_key_here
# Optional: override default database location
SNDS_DB_PATH=snds.db

# SMTP email settings (required for email alerts)
# SMTP server hostname, e.g. smtp.sendgrid.net or email-smtp.us-east-1.amazonaws.com
SMTP_HOST=
# Port (587 for STARTTLS, 465 for SSL)
SMTP_PORT=587
# Username and password for SMTP auth
SMTP_USER=
SMTP_PASS=
# From address used for alert emails
SMTP_FROM=

# Optional: SenderScore scraping aids
# If SenderScore requires authentication/cookies, place cookie here (e.g., "session=...")
SENDERSCORE_COOKIE=
# Override User-Agent if needed
SENDERSCORE_USER_AGENT=
# Optional throttling and limits to emulate human browsing
SENDERSCORE_MAX_IPS_PER_RUN=30
SENDERSCORE_DELAY_MIN_SEC=3.0
SENDERSCORE_DELAY_MAX_SEC=6.0
